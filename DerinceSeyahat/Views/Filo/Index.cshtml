@model IEnumerable<DerinceSeyahat.Models.Arac>

@{
    ViewData["Title"] = "Filomuz";
}

<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="portfolio">
    <div class="container">

        <div class="section-title">
            <h2>@ViewData["Title"]</h2>
            <p>Filomuza göz atın!</p>
        </div>

        <div class="row portfolio-container">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 portfolio-item">
                    <div class="portfolio-wrap">
                        <img src="@Url.Content(item.AracImage)" class="img-fluid" alt="">
                        <div class="portfolio-links">
                            <a href="@Url.Content(item.AracImage)" data-gallery="portfolioGallery" class="portfolio-lightbox"><i class="bi bi-plus"></i></a>
                            <a href="portfolio-details.html" title="Daha Fazla Ayrıntı"><i class="bi bi-link"></i></a>
                        </div>
                        <div class="portfolio-info">
                            <h4>@Html.DisplayFor(modelItem => item.AracModel)</h4>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section><!-- End Portfolio Section -->