@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = @localizer["Title"];
}

<!-- ======= About Section ======= -->
<section id="about" class="about">
    <div class="container">

        <div class="row justify-content-between">
            <div class="col-lg-5 d-flex align-items-center justify-content-center about-img">
                <img src="~/img/dsbademgroup.png" class="img-fluid" alt="">
            </div>
            <div class="col-lg-6 pt-5 pt-lg-0">
                <h3>@localizer["WhoAreWe"]</h3>
                <p>
                    @localizer["WhoAreWeContext"]
                </p>
                <div class="row">
                    <div class="col-md-12">
                        <i class="bx bx-receipt"></i>
                        <h4>@localizer["Staff"]</h4>
                        <p>✓ @localizer["StaffContext1"]</p>
                        <p>✓ @localizer["StaffContext2"]</p>
                        <p>✓ @localizer["StaffContext3"]</p>
                        <p>✓ @localizer["StaffContext4"]</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section><!-- End About Section -->
