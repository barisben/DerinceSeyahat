@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DerinceSeyahat</title>

    <!-- Favicons -->
    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/lib/aos/aos.css" rel="stylesheet">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/lib/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container-fluid d-flex align-items-center justify-content-between">

            <div class="logo">
                <!-- <h1 class="text-light"><a href="index.html"><span>Ninestars</span></a></h1> -->
                <!-- Uncomment below if you prefer to use an image logo -->
                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/dsyazi.png" alt="" class="img-fluid"></a>
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Index">@localizer["Home"]</a></li>
                    <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="About">@localizer["About"]</a></li>
                    <li class="dropdown">
                        <a href="#"><span>@localizer["Services"]</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a asp-area="" asp-controller="Service" asp-action="PersonelTasimaciligi">@localizer["Employee"]</a></li>
                            <li><a asp-area="" asp-controller="Service" asp-action="OgrenciTasimaciligi">@localizer["Student"]</a></li>
                            <li><a asp-area="" asp-controller="Service" asp-action="VipTasimaciligi">@localizer["Vip"]</a></li>
                            <li><a asp-area="" asp-controller="Service" asp-action="OrganizasyonTasimaciligi">@localizer["Organization"]</a></li>
                            <li><a asp-area="" asp-controller="Service" asp-action="OzelGunTasimaciligi">@localizer["SpecialDay"]</a></li>
                        </ul>
                    </li>
                    <li><a class="nav-link scrollto" asp-area="" asp-controller="Filo" asp-action="Index">@localizer["Fleet"]</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li class="dropdown">
                                <a href="#"><span>@localizer["Admin"]</span> <i class="bi bi-chevron-down"></i></a>
                                <ul>
                                    <li><a asp-area="" asp-controller="Admin" asp-action="Roles">@localizer["Roles"]</a></li>
                                    <li><a asp-area="" asp-controller="Admin" asp-action="UserList">@localizer["UserList"]</a></li>
                                    <li><a asp-area="" asp-controller="Araclar" asp-action="Index">@localizer["VehicleList"]</a></li>
                                </ul>
                            </li>
                        }
                    }
                    <partial name="_LoginPartial" />
                    <li class="nav-link"><partial name="_Culture" /></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->

    <main id="main">
        @RenderBody()
    </main>

    <!-- ======= Clients Section ======= -->
    <section id="clients" class="clients section-bg">
        <div class="container">

            <div class="section-title">
                <h2>@localizer["Certificates"]</h2>
            </div>

            <div class="clients-slider swiper">
                <div class="swiper-wrapper align-items-center">
                    <div class="swiper-slide"><img src="~/img/sertifikalar/tursab-153868.png" class="img-fluid" alt=""></div>
                    <div class="swiper-slide"><img src="~/img/sertifikalar/iso-9001-663281.png" class="img-fluid" alt=""></div>
                    <div class="swiper-slide"><img src="~/img/sertifikalar/iso-45001-353812.png" class="img-fluid" alt=""></div>
                    <div class="swiper-slide"><img src="~/img/sertifikalar/iso390001-20501.png" class="img-fluid" alt=""></div>
                    <div class="swiper-slide"><img src="~/img/sertifikalar/iso-14001-323807.png" class="img-fluid" alt=""></div>
                    <div class="swiper-slide"><img src="~/img/sertifikalar/iso-27001-845328.png" class="img-fluid" alt=""></div>
                    <div class="swiper-slide"><img src="~/img/sertifikalar/iso-10002-581764.png" class="img-fluid" alt=""></div>
                    <div class="swiper-slide"><img src="~/img/sertifikalar/tse-349679.png" class="img-fluid" alt=""></div>
                    <div class="swiper-slide"><img src="~/img/sertifikalar/tursab-005611.png" class="img-fluid" alt=""></div>
                </div>
                <div class="swiper-pagination"></div>
            </div>

        </div>
    </section><!-- End Clients Section -->
    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>@localizer["Contact"]</h3>
                        <p>
                            İbni Sina Mahallesi <br>
                            Gülay Sk. No:7-b<br>
                            Derince/Kocaeli <br><br>
                            <strong>@localizer["Phone"]:</strong> +90 542 804 47 47<br>
                            <strong>@localizer["Email"]:</strong> info@derinceseyahat.com<br>
                        </p>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h3>@localizer["Aboutl"]</h3>
                        <p>
                            @localizer["AboutlContent"]
                        </p>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h3>@localizer["Servicesl"]</h3>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a asp-area="" asp-controller="Service" asp-action="PersonelTasimaciligi">@localizer["Employee"]</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a asp-area="" asp-controller="Service" asp-action="OgrenciTasimaciligi">@localizer["Student"]</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a asp-area="" asp-controller="Service" asp-action="VipTasimaciligi">@localizer["Vip"]</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a asp-area="" asp-controller="Service" asp-action="OrganizasyonTasimaciligi">@localizer["Organization"]</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a asp-area="" asp-controller="Service" asp-action="OzelGunTasimaciligi">@localizer["SpecialDay"]</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h3>@localizer["KeepFollow"]</h3>
                        <p>@localizer["FollowUs"]</p>
                        <div class="social-links mt-3">
                            <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                            <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                            <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                            <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="container py-4">
            <div class="copyright">
                &copy; Copyright <strong><span>Ninestars</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/ninestars-free-bootstrap-3-theme-for-creative/ -->
                Designed by <a href="https://bootstrapmade.com/"><strong>BootstrapMade</strong></a>
            </div>
        </div>
    </footer><!-- End Footer -->
    <!-- Vendor JS Files -->
    <script src="~/lib/aos/aos.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/glightbox/js/glightbox.min.js"></script>
    <script src="~/lib/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/lib/swiper/swiper-bundle.min.js"></script>
    <script src="~/lib/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
