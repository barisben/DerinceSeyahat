@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a  class="getstarted scrollto" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Merhaba @User.Identity.Name!</a>
    </li>
    <li>
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="getstarted scrollto">Çıkış Yap</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="getstarted scrollto" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
    </li>
    <li>
        <a class="getstarted scrollto" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
    </li>
}